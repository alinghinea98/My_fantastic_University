    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_message_body_s"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_sent_message"
            android:text="Salut! Acesta este un mesaj generat automat."
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_message_time_s"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_message_body_s"
            app:layout_constraintRight_toLeftOf="@+id/text_message_body_s" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>