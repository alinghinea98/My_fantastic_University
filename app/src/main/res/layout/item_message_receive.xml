<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_message_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/mini_user"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"/>

        <TextView
            android:id="@+id/text_message_name_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nume Prof."
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/image_message_profile"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/text_message_body_r"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_received_message"
            android:padding="16dp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/text_message_name_r"
            app:layout_constraintLeft_toRightOf="@id/image_message_profile"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Salut. Mesaj 2 generat automat"/>
        <TextView
            android:id="@+id/text_message_time_r"
            android:text="11:40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            app:layout_constraintLeft_toRightOf="@+id/text_message_body_r"
            android:layout_marginStart="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_message_body_r"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>